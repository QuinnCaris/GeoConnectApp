<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="30dp">

    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/profilepic3" />

            <ImageView
                android:id="@+id/searchButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="106dp"
                android:layout_marginTop="187dp"
                android:clickable="true"
                android:src="@drawable/searchbutton2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/sora_semibold"
            android:paddingStart="7dp"
            android:paddingTop="140dp"
            android:text="@string/David"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/sora"
                android:paddingStart="7dp"
                android:paddingTop="163dp"
                android:text="Interested in Progra..."
                android:textSize="12dp" />

        <TextView
            android:id="@+id/distanceTextHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/sora_semibold"
            android:paddingStart="7dp"
            android:paddingTop="185dp"
            android:paddingBottom="15dp"
            android:text="Distance"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        </androidx.cardview.widget.CardView>
</LinearLayout>