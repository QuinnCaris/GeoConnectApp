<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    tools:context=".RegistrationPage">

    <ImageView
        android:id="@+id/RegisterLogo"
        android:layout_width="317dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:srcCompat="@drawable/geoconnect_icon" />

    <LinearLayout
        android:id="@+id/linear_layout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/signInUsername"
        app:layout_constraintEnd_toEndOf="@+id/RegisterLogo"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="@+id/RegisterLogo"
        app:layout_constraintTop_toBottomOf="@id/RegisterLogo">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sora_bold"
            android:text="@string/hello"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/please_fill_in_the_details"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="183dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/signInUsername"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/custom_edittext"
        android:drawableStart="@drawable/user"
        android:fontFamily="sans-serif"
        android:hint="@string/enter_your_username"
        android:textSize="15sp"
        android:drawablePadding="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/signInUseremail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterLogo" />

    <EditText
        android:id="@+id/signInUseremail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/custom_edittext"
        android:drawableStart="@drawable/mail"
        android:drawablePadding="8dp"
        android:fontFamily="sans-serif"
        android:hint="@string/enter_your_email_address"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/signInPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signInUsername" />

    <EditText
        android:id="@+id/signInPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/custom_edittext"
        android:drawableStart="@drawable/lock"
        android:fontFamily="sans-serif"
        android:hint="@string/at_least_8_character"
        android:textSize="15sp"
        android:drawablePadding="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/signInBtn"
        app:layout_constraintEnd_toEndOf="@id/signInUseremail"
        app:layout_constraintStart_toStartOf="@id/signInUseremail"
        app:layout_constraintTop_toBottomOf="@+id/signInUseremail" />

    <Button
        android:id="@+id/signInBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/green"
        android:text="@string/sign_up"
        android:textStyle="bold"
        app:cornerRadius="24dp"
        app:layout_constraintEnd_toEndOf="@+id/signInPassword"
        app:layout_constraintStart_toStartOf="@+id/signInPassword"
        app:layout_constraintTop_toBottomOf="@+id/signInPassword" />

    <LinearLayout
        android:id="@+id/linear_layout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/signInBtn"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="@+id/signInBtn"
        app:layout_constraintTop_toBottomOf="@+id/signInBtn">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/already_have_an_account"
            android:textStyle="bold"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/sign_up_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_in"
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="@color/kelly_green"
            android:layout_marginStart="5dp"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>